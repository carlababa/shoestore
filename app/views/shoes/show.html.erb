<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-5">
      <div class= "template">
          <%= image_tag( @shoe.image, class: "img-show") %>
          <div class = "title-background"><h1 class = "big-title"><%= @shoe.name %></h1></div>
      </div>
    </div>

    <div class = "col-sm-12 col-md-7">
      <div class = "text-background">
        <h3 class = "text-title">Brand: <%= @shoe.brand %></h3>
        <div class = "text-block">
              <h3 class = "text-text">Color: <%= @shoe.color %></h3>
              <h3 class = "text-text">Price: <%= @shoe.price %></h3>
              <h3 class = "text-text">In stock: <%= @shoe.stock %></h3>
              <h3 class = "text-text">Size: <%= @shoe.size %></h3>
        </div>
        <div>
            <h3><a class = "btn btn-default btn-lg button-card" href="/cart/<%=@shoe.id%>">Add to cart</a></h3>
      </div>
       </div>
    </div>
   </div>
  </div>

<% if @shoe.reviews.count > 1 %>
  <h3>What our Customers say about <%=@shoe.name%></h3>
  <%= render @shoe.reviews %>
<%end%>  
